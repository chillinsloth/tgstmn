<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".UploadMaterial">

    <VideoView
        android:id="@+id/preupvid"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:backgroundTint="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_border"
        android:padding="10dp">

        <EditText
            android:id="@+id/titlevid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vidtitle"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/discardvid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backbtn"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/postbtn"
            android:onClick="pickVideo"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadvid"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btnborder"
            android:text="@string/btnupload"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingupvid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/medium"
        android:visibility="invisible"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>